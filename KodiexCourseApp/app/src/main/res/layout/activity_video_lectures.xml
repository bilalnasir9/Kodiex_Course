<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundshape3"
    tools:context=".video_lectures_activity">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Video Lectures"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/constraintLay_videolecture_activity"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ECECEC"
        android:visibility="visible"
        android:background="@drawable/backgroundshape6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_videolecture_course1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="btn_videolecture_course1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            android:text="Course 1"
            app:iconSize="15dp"
            android:textColor="@color/black"
            app:cornerRadius="8dp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_baseline_arrow_forward"
            app:iconGravity="end"
            android:textSize="18dp"
            android:textStyle="bold"
            app:iconTint="#676666"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_videolecture_course2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:onClick="btn_videolecture_course2"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            android:text="Course 2"
            app:iconSize="15dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_baseline_arrow_forward"
            app:iconGravity="end"
            app:iconTint="#676666"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_videolecture_course1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_videolectures"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:backgroundTint="#D8D8D8"
        android:background="@drawable/backgroundshape6"
        android:layout_marginTop="10sp"
        android:paddingTop="60dp"
        android:paddingHorizontal="5dp"
        android:layout_marginHorizontal="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />
</androidx.constraintlayout.widget.ConstraintLayout>