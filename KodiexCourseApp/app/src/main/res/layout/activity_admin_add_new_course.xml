<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".admin_portal.admin_add_new_course_activity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:backgroundTint="#002553"
        android:background="@drawable/backgroundshape10"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--I am using 'anc' as a short term for add new course-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10sp"
            android:layout_marginTop="24dp"
            android:text="Basic Information:"
            android:textColor="#FFC107"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edittext_admin_anc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/backgroundshape2"
            android:hint="Title"
            android:maxLength="100"
            android:maxLines="2"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10sp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edittext_admin_anc_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/backgroundshape2"
            android:hint="Subject"
            android:maxLength="100"
            android:maxLines="2"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10sp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edittext_admin_anc_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/backgroundshape2"
            android:digits="12345"
            android:hint="Rating (1 to 5)"
            android:inputType="textNoSuggestions"
            android:maxLength="1"
            android:maxLines="1"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10sp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edittext_admin_anc_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/backgroundshape2"
            android:digits="0123456789.freeFREE"
            android:hint="Price"
            android:inputType="textNoSuggestions"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10sp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edittext_admin_anc_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/backgroundshape2"
            android:hint="Difficulty"
            android:maxLength="25"
            android:maxLines="1"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10sp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edittext_admin_anc_lectures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/backgroundshape2"
            android:hint="Total Lectures"
            android:inputType="number"
            android:maxLength="5"
            android:maxLines="1"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10sp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edittext_admin_anc_instructor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/backgroundshape2"
            android:hint="Instructor name"
            android:maxLength="25"
            android:maxLines="2"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10sp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edittext_admin_anc_imageURL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/backgroundshape2"
            android:gravity="start"
            android:hint="Thumbnail image URL (SVG)"
            android:maxLines="2"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_admin_announcement_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="24dp"
            android:text="Intro Lecture Information:"
            android:textColor="#FFC107"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edittext_admin_anc_curriculum_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/backgroundshape2"
            android:hint="Lecture Title"
            android:maxLength="100"
            android:maxLines="2"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10sp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edittext_admin_anc_curriculum_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/backgroundshape2"
            android:hint="Video link"
            android:maxLines="2"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10sp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edittext_admin_anc_curriculum_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/backgroundshape2"
            android:digits="1234567890:"
            android:gravity="start"
            android:hint="Duration\t\t(00:00)"
            android:inputType="textNoSuggestions"
            android:maxLength="5"
            android:maxLines="1"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_admin_announcement_title" />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/backgroundshape1"
            android:onClick="button_admin_anc_save"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_admin_announcement_detail" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/backgroundshape1"
            android:backgroundTint="#CF8181"
            android:onClick="button_admin_anc_cancel"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_admin_save_announcement"
            app:layout_constraintTop_toBottomOf="@+id/edittext_admin_announcement_detail" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>