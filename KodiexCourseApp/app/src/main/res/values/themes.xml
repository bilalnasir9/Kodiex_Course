<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KodiexCourseApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryVariant">#03A9F4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="noactionbar"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryVariant">#03A9F4</item>
        <item name="android:textColorPrimary">#03A9F4</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="MyCustomTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:actionOverflowButtonStyle">@style/MyCustomTheme.OverFlow</item>
        <item name="counterOverflowTextColor">@color/black</item>
    </style>

    <style name="MyCustomTheme.OverFlow">
        <item name="android:src">@drawable/ic_menu</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="AppCompatAlertDialogStyle"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#03A9F4</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#03A9F4</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#737272</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>
</resources>